<Project
	DefaultTargets="PrepareBuild;Build;FinishBuild"
	ToolsVersion="14.0"
	xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	
	<!-- ============================== Default MSBuild elements ============================== -->
	
	<!--
		List of project configurations known to the project (such as 'Debug|Win32' or
		'Release|Win32').
	-->
	<ItemGroup Label="ProjectConfigurations">
		<ProjectConfiguration Include="Release|Win32">
			<Configuration>Release</Configuration>
			<Platform>x86</Platform>
		</ProjectConfiguration>
	</ItemGroup>
	
	<!--
		Project level settings such as 'ProjectGuid' or 'RootNamespace'. These properties are
		usually not overridden elsewhere and are configuration independent; thus, only one
		'Globals' group generally exists.
	-->
	<PropertyGroup Label="Globals">
		<!-- Visual Studio configuration -->
		<SchemaVersion>2.0</SchemaVersion>
		<VisualStudioVersion>14.0</VisualStudioVersion>
		<PlatformToolset>v140</PlatformToolset>
		<BuildProjectReferences>true</BuildProjectReferences>
		<!-- Name-space and version configuration -->
		<RootNamespace>pmChess</RootNamespace>
		<AssemblyName>pmChess</AssemblyName>
		<ModuleAssemblyName>pmChess</ModuleAssemblyName>
		<StartupObject>pmChess</StartupObject>
		<ProductVersion>1.1.0.0</ProductVersion><!-- major.minor.build.revision -->
		<ProjectGuid>{a023bd13-2699-5acc-918e-3b45ded2fe62}</ProjectGuid>
		<Configuration Condition=" '$(Configuration)' == '' ">Release</Configuration>
		<!-- Target platform configuration -->
		<Platform>x86</Platform>
		<PlatformTarget>x86</PlatformTarget>
		<ProcessorArchitecture>x86</ProcessorArchitecture>
		<ConfigurationType>Application</ConfigurationType>
		<OutputType>Winexe</OutputType>
		<!-- Source code encoding configuration -->
		<CharacterSet>Unicode</CharacterSet>
		<CodePage>utf-8</CodePage>
		<Utf8Output>true</Utf8Output>
		<!-- Build-path configuration -->
		<OutputPath>pmChess\temp\</OutputPath>
		<OutDir>pmChess\temp\</OutDir>
		<BaseOutputPath>pmChess\temp\</BaseOutputPath>
		<BaseIntermediateOutputPath>pmChess\temp\</BaseIntermediateOutputPath>
		<IntermediateOutputPath>pmChess\temp\</IntermediateOutputPath>
		<!-- Compiler front-end configuration (language features) -->
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<OptionExplicit>true</OptionExplicit>
		<OptionStrict>true</OptionStrict>
		<OptionInfer>false</OptionInfer>
		<NoStdLib>true</NoStdLib>
		<NoVBRuntimeReference>true</NoVBRuntimeReference>
		<OptionCompare>binary</OptionCompare>
		<!-- Compiler back-end configuration (code generation features) -->
		<SubsystemVersion>6.01</SubsystemVersion><!-- Windows 7 -->
		<Deterministic>true</Deterministic><!-- always produce same binaries for same input -->
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
		<Optimize>true</Optimize>
		<RemoveIntegerChecks>true</RemoveIntegerChecks>
		<SGenUseProxyTypes>false</SGenUseProxyTypes>
		<!-- Debug information configuration -->
		<DebugSymbols>false</DebugSymbols>
		<DefineDebug>false</DefineDebug>
		<DefineTrace>false</DefineTrace>
		<DebugType>none</DebugType>
		<ErrorReport>none</ErrorReport><!-- don't report compiler errors to Microsoft -->
		<GenerateDocumentation>false</GenerateDocumentation>
	</PropertyGroup>
	
	<!--
		Property sheet providing default settings for VC++ projects. It contains definitions for
		all common project settings such as 'Platform', 'PlatformToolset', 'OutputPath',
		'TargetName', 'UseOfAtl' etc. It further provides group defaults for each known item
		definition group. In general, properties in this file are not tool-specific.
	-->
	<Import Project="$(VCTargetsPath)\Microsoft.Cpp.default.props"/>
	
	<!--
		Property group with configuration-wide properties. Multiple instances with configuration
		conditions like
			Condition="'$(Configuration)|$(Platform)'=='Debug|Win32'"
		can be used to define default properties for different configurations. The defined
		properties in turn can control the inclusion of system properties provided by
		'Microsoft.Cpp.props' which is imported below. For example, if
			<CharacterSet>Unicode</CharacterSet>
		is set, the system property sheet 'microsoft.Cpp.unicodesupport.props' will be included due
		to an conditional import on '$(CharacterSet)' by 'Microsoft.Cpp.props'.
	-->
	<PropertyGroup Label="Configuration"/>
	
	<!--
		Property sheet defining (directly or via imports) the default values for many tool-specific
		build options such as the compiler’s 'Optimization' or 'WarningLevel' settings. In
		addition, various system property sheets are imported based on configuration properties
		defined in the property group immediately above.
	-->
	<Import Project="$(VCTargetsPath)\Microsoft.Cpp.props"/>
	
	<!--
		Group containing imports for the property sheets that are part of build customizations
		(custom build rules). A build customization is defined by up to three files: a '.targets'
		file, a '.props' file and an '.xml' file. This import group contains the imports for the
		'.props' file.
	-->
	<ImportGroup Label="ExtensionSettings"/>
	
	<!--
		Group containing the imports for user property sheets as added through the "Property
		Manager" view in Visual Studio. The order in which these imports are listed is relevant.
		There are typically multiple instances of this kind of import group, one for each project
		configuration.
	-->
	<ImportGroup Label="PropertySheets"/>
	
	<!--
		List of user macros, defining common variables to ease further customizations.
	-->
	<PropertyGroup Label="UserMacros"/>
	
	<!--
		Property group containing project configuration level settings. These settings apply to all
		files that are part of the specified item group. The item-definition metadata of build
		customizations are also initialized here. The group is typically defined for each
		configuration using configuration conditions. 
	-->
	<PropertyGroup/>
	
	<!--
		Similar to the property group immediately above but for item definitions and their metadata
		instead of properties.
	-->
	<ItemDefinitionGroup Condition=" '$(Configuration)' == 'Release' ">
		<ClCompile>
			<BuildingInIDE>false</BuildingInIDE>
			<TreatWarningAsError>true</TreatWarningAsError>
			<CompileAs>CompileAsCpp</CompileAs>
			<ErrorReporting>None</ErrorReporting><!-- don't report compiler errors to Microsoft -->
			<ExceptionHandling>Sync</ExceptionHandling>
			<FloatingPointExceptions>false</FloatingPointExceptions>
			<!--<DisableLanguageExtensions>true</DisableLanguageExtensions>-->
			<!--<UndefineAllPreprocessorDefinitions>true</UndefineAllPreprocessorDefinitions>-->
			<ForceConformanceInForLoopScope>true</ForceConformanceInForLoopScope>
			<MinimalRebuild>false</MinimalRebuild>
			<InlineFunctionExpansion>AnySuitable</InlineFunctionExpansion>
			<OpenMPSupport>false</OpenMPSupport>
			<PreprocessKeepComments>false</PreprocessKeepComments>
			<RuntimeTypeInfo>false</RuntimeTypeInfo>
			<StringPooling>true</StringPooling>
			<UseUnicodeForAssemblerListing>true</UseUnicodeForAssemblerListing>
			<WholeProgramOptimization>true</WholeProgramOptimization>
			<CompileAsManaged>false</CompileAsManaged>
			<AdditionalIncludeDirectories>.</AdditionalIncludeDirectories>
			<WarningLevel>Level4</WarningLevel><!-- 'windows.h' fails if 'EnableAllWarnings' -->
			<FloatingPointModel>Strict</FloatingPointModel>
			<Optimization>MaxSpeed</Optimization>
			<FavorSizeOrSpeed>Speed</FavorSizeOrSpeed>
			<FunctionLevelLinking>true</FunctionLevelLinking>
			<IntrinsicFunctions>true</IntrinsicFunctions>
			<SmallerTypeCheck>false</SmallerTypeCheck>
			<BufferSecurityCheck>false</BufferSecurityCheck>
		</ClCompile>
		<Link>
			<BuildingInIDE>false</BuildingInIDE>
			<SubSystem>Windows</SubSystem>
			<EntryPointSymbol>wWinMainCRTStartup</EntryPointSymbol>
			<EnableUAC>false</EnableUAC>
			<GenerateDebugInformation>false</GenerateDebugInformation>
			<EnableCOMDATFolding>true</EnableCOMDATFolding>
			<OptimizeReferences>true</OptimizeReferences>
		</Link>
	</ItemDefinitionGroup>
	
	<!--
		Groups listing the items of the project (source files, etc). Usually there are multiple
		item groups defined here, one per item type.
	-->
	<ItemGroup>
		<ClCompile Include="pmChess.cpp"/>
		<Link Include="pmChess\temp\pmChess.ico.res"/>
	</ItemGroup>
	
	<!--
		Definitions (directly or via imports) of VC++ targets such as build, clean, etc.
	-->
	<Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets"/>
	
	<!--
		Group containing imports for build customization target files.
	-->
	<ImportGroup Label="ExtensionTargets"/>
	
	<!-- ==================================== User targets ==================================== -->
	
	<Target Name="PrepareBuild" BeforeTargets="Build">
		<MakeDir Directories = "pmChess\temp" Condition = "!Exists('pmChess\temp')"/>
		<Exec Command="rc /nologo /fo pmChess\temp\pmChess.ico.res pmChess.ico.rc"/>
		<Exec Command="cvtres /nologo /machine:ix86 /out:pmChess\temp\pmChess.ico.obj pmChess\temp\pmChess.ico.res"/>
	</Target>
	
	<Target Name="FinishBuild" AfterTargets="Build">
		<Exec Command="mt.exe /nologo /manifest &quot;pmChess.exe.manifest&quot; /outputresource:&quot;pmChess\temp\pmChess.exe;#1&quot;"/>
		<Copy SourceFiles="pmChess\temp\pmChess.exe" DestinationFolder="pmChess"/>
		<RemoveDir Directories="pmChess\temp\"/>
		<Exec Command="cd .. &amp; ant -silent windows-bundle"/>
	</Target>
</Project>